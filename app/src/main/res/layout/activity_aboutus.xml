<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#221f28"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="210dp"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/header"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"

            android:background="@drawable/chairman"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax" />


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/itemonex"
                android:layout_width="match_parent"
                android:layout_height="620dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"

                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:padding="16dp"
                android:background="@drawable/bgitemxx"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitlex">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=" About Ait"
                        android:textStyle="bold"

                        android:textColor="#70190a"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="4dp"
                        android:text="I am pleased to welcome you to our website:www.assureindia.in . AIT (Assure India technology) has
emerged as one of the front ranking IT institutes India but exclusive in Odisha Region with in a short
span of one decade.
AIT is well known for various initiatives in professional education. It is right from
the students admitted in PCTT programme offered by the ait have to pass through a very stringent
admission process. Recognizing the impact of input on students, leading business organizations have
visited the AIT EKC centres at Odisha and placed them for enriching the computer skills of their
human resources for the highen organization performance.
The ait has always seen quality education as first priority, thus, ensuring the academic rigour,
institute industrial interface and overall personality development of the students. Consistent efforts
are made for bringing in refinement in everything that concerns the institution. Faculty has a mix of
academic professional experiences. The curriculum and syllabus are regularly reviewed and revised
in view of changing needs of the society in general and professional environment in particulars ."
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemonex1"
                android:layout_width="match_parent"
                android:layout_height="540dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bgitemxx"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitlex">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text=" Chairman’s message"
                        android:textStyle="bold"

                        android:textColor="#70190a"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="4dp"
                        android:text="“Bringing society closer to IT Revolution through” Each one, Teach one”

I am looking at mar bolus achiever inside you who is full of innovative ideas and beyond vast potential. Take your confidence and competence to the higher level of achievement meet the achiever inside you. Welcome to ait (Assure India Technology)
Heartily congratulations. You have just taken the first step to reaching your full potential by landing on our website. The professional IT education is a milestone towards an inspiring and rewarding career.
Enrolling in a  PCTT (profession and computer teacher training) at ait offers you the chance to build the foundations needed for that exciting future. In an ever changing  world you need the institute and course to be dynamic, deliver world class education with the finest facilities is to have teachers who excel in their disciplines both as educators and researchers. AIT will provide you exactly the same by PCTT.
"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemonex2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="45dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bgitemxx"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitlex">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text=" Vision"
                        android:textStyle="bold"

                        android:textColor="#70190a"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="4dp"
                        android:text="Our vision is to be an organisation engaged in creating thought professional leaders through innovative research, consulting and by being almamater of next practices."
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>




        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>