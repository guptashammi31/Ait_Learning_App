<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eve"
    tools:context="com.live.ravi.chatdummy.EventsActivity">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="#65c2d3" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="39dp"
        android:layout_height="34dp"
        android:layout_alignBottom="@+id/spinner"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        app:srcCompat="@drawable/ait" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:gravity="center"
        android:text="   ---Select city---"
        android:textSize="16dp" />

    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/ddd"
            android:layout_marginTop="40dp"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:text="01 jan,2019"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginTop="65dp"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:text="Time"
            android:textStyle="bold"
            android:textSize="19dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/ttt"
            android:layout_marginTop="95dp"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:text="00:00am"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_marginTop="125dp"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:text="Address"
            android:textStyle="bold"
            android:textSize="19dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/addr"
            android:layout_marginTop="160dp"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:text="select your District"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Date"
            android:textAlignment="center"
            android:textSize="19dp"
            android:textColor="#000"
            android:textAllCaps="true"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>


</RelativeLayout>