<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#261f1f"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="210dp"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/faqss"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/itemonex"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bgitemxx"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitlex">

                <com.vipul.hp_hp.timelineview.TimelineView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="25dp"
                    app:line="@color/colorLine"
                    app:line_size="1dp"
                    app:marker="@drawable/ic_comments"
                    app:marker_size="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="FAQ. 1) What is the genesis of ait Management?"
                        android:textColor="#70190a"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="4dp"
                        android:text="The foundation of ait (assure India technology) was laid by “ait education and charitable trust” established in 2011, the institute provides PCTT (profession computer teacher training) 1 year fulltime IT programme. PCTT completely focus on all the amenities like seminar, modern technique equipped classroom, well outfitted computer lab. Wi-Fi campus, mobile apps, placement guarantee for successful candidates."
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/itemonex2"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bgitemxx"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitlex">

                <com.vipul.hp_hp.timelineview.TimelineView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="25dp"
                    app:line="@color/colorLine"
                    app:line_size="1dp"
                    app:marker="@drawable/ic_comments"
                    app:marker_size="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="FAQ. 2) What is eligibility criteria and procedure for taking admission in PCTT?"
                        android:textColor="#70190a"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="4dp"
                        android:text=" Minimum intermediate, or Intermediate in any discipline from any recognized institutes. If you are passing matriculation, you are also eligible to apply. Also the candidates must have pass minimums H.S.C. exams. "
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/itemonex1"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bgitemxx"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitlex">

                <com.vipul.hp_hp.timelineview.TimelineView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="25dp"
                    app:line="@color/colorLine"
                    app:line_size="1dp"
                    app:marker="@drawable/ic_comments"
                    app:marker_size="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="FAQ. 3) What are the accreditation and approval of the organisation?"
                        android:textColor="#70190a"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="4dp"
                        android:text=" Ait is an autonomous registered trust no.  41081307080 approved by Gov. of Odisha. Also the organisation approved by ISO 9001-2015 Certified and UKAF (UK Accreditation Forum Limited).    "
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/itemonex3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bgitemxx"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitlex">

                <com.vipul.hp_hp.timelineview.TimelineView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="25dp"
                    app:line="@color/colorLine"
                    app:line_size="1dp"
                    app:marker="@drawable/ic_comments"
                    app:marker_size="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="FAQ. 4) What are the specialization which institute offers or does it offer any professional course?"
                        android:textColor="#70190a"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="4dp"
                        android:text="   Ait gives a choice electives of coding, database management, animation, programming, accounting, networking classes. For more information please visit www.assureindia.in "
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/itemonex5"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bgitemxx"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitlex">

                <com.vipul.hp_hp.timelineview.TimelineView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="25dp"
                    app:line="@color/colorLine"
                    app:line_size="1dp"
                    app:marker="@drawable/ic_comments"
                    app:marker_size="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="FAQ. 5) Tell us about the institute faculty resource?"
                        android:textColor="#70190a"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="4dp"
                        android:text=" Ait takes pride in its distinguished and highly experienced faculty as they constitute the backbone of our institutes. Our faculty ait has created an intellectual community of full time faculty members for their excellent teaching skills and contribution to management education through the creation of new knowledge and skills. "
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/itemonex7"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bgitemxx"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitlex">

                <com.vipul.hp_hp.timelineview.TimelineView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="25dp"
                    app:line="@color/colorLine"
                    app:line_size="1dp"
                    app:marker="@drawable/ic_comments"
                    app:marker_size="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="FAQ. 7) What is the number of seats for admission 2019 for your PCTT programme?"
                        android:textColor="#70190a"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="4dp"
                        android:text=" Ait has 80 seats in flagship PCTT programme as an eligibility criteria for every located ekc (Exclusive Knowledge Center)"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemonex8"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginBottom="40dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bgitemxx"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitlex">

                <com.vipul.hp_hp.timelineview.TimelineView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="25dp"
                    app:line="@color/colorLine"
                    app:line_size="1dp"
                    app:marker="@drawable/ic_comments"
                    app:marker_size="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="FAQ. 8) What is the fee structure?"
                        android:textColor="#70190a"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="4dp"
                        android:text=" Course fee Rs. 6987 (six thousand nine hundred eighty seven) for one year that student need to pay in twelve instalments. Registration fee is Rs.999/- rupees and rest amount will pay Rs.499/- with twelve instalments."
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>