<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#76adc7"
    tools:context="com.live.ravi.chatdummy.UploadGalleryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@drawable/gradient_bg" />

        <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

        android:orientation="vertical">

            <Button
                android:id="@+id/buttonChoose1"
                android:layout_width="250dp"

                android:layout_height="250dp"
                android:layout_marginTop="23dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@drawable/gallery"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonChoose1"
                android:layout_marginTop="23dp"

                android:layout_weight="4"
                android:hint="Enter Description"
                android:textAlignment="center" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/relativeLayout2">

    </RelativeLayout>

        <Button
            android:id="@+id/buttonUpload1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"


            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="88dp"
            android:layout_weight="1"
            android:background="@drawable/trans_bg_fill"
            android:text="Upload Images" />

    </RelativeLayout>
</ScrollView>
