<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cardview1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardMaxElevation="5dp"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:background="#ECEFF1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/pdf" />

        <TextView
            android:id="@+id/ImageNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:gravity="center"
            android:text="JSon Image Name"
            android:textColor="#000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/watcherImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignLeft="@+id/ImageNameTextView"
            android:layout_alignStart="@+id/ImageNameTextView"
            app:srcCompat="@drawable/ic_watchers" />

        <TextView
            android:id="@+id/watcherCounterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/watcherImageView"
            android:layout_toEndOf="@+id/imageView7"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/imageView7"
            android:text="Textview"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="22dp"
            android:layout_marginLeft="145dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            card_view:srcCompat="@drawable/clock" />


    </RelativeLayout>

</android.support.v7.widget.CardView>